doctype html

html(lang="en", ng-controller="ApplicationController")
  head
    base(href="/")
    title(ng-bind="getTitle()")
    meta(name="description", content="{{getDescription()}}")
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='styles/custom-bootstrap.css')
    link(rel='stylesheet', href='styles/offcanvas.css')
    link(rel='stylesheet', href='styles/ngProgress.css')
    link(rel='stylesheet', href='styles/plusgallery.css')
  body
    div.container      
      div.row.row-offcanvas.row-offcanvas-right        
        div.col-xs-12.col-sm-12          
          div(ng-include="'/views/navigator.html'")
          div(ng-include="'/views/header.html'")
          div(ui-view)          
        div(ng-include="'/views/side-bar.html'")
      div(ng-include="'/views/footer.html'")
    div.device-xs.visible-xs
    div.device-sm.visible-sm
    div.device-md.visible-md
    div.device-lg.visible-lg
    script(src="scripts/vendors/require.js", data-main=page.environmentScript)